// 		Socket::recvfrom <T *> ( &sender.address, sender.address_len,
// 			length, peerConnected, flags )
// 	);
// }

template <typename T>
inline T		Socket::recvfrom ( Socket & sender, size_t length,
	bool * peerConnected, int flags )
{
	return (
		Socket::recvfrom <T> ( &sender.address, sender.address_len,
			length, peerConnected, flags )
	);
}

