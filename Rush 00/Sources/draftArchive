// template <typename T>
// T *				Socket::recv( int sockfd, size_t length, bool * peerConnected,
// 	int flags )
// {
// 	ssize_t bytes_recvd;
// 	T * data;

// 	data = new T [ length ];

// 	bytes_recvd = Socket::recv_into <T> ( sockfd ,
// 	                                      reinterpret_cast <void *> ( data ) ,
// 	                                      length , flags );
// 	if ( bytes_recvd == 0 ) {

// 		if ( peerConnected != nullptr )
// 			( * peerConnected ) = true;
// 		else
// 			throw SocketPeerDisconnect(
// 				/* the peer of this */ sockfd /* has disconnected */
// 			);

// 	} else {

// 		if ( peerConnected != nullptr )
// 			( * peerConnected ) = false;

// 	}

// 	return ( data );
// }

template <typename T>
T				Socket::recv( int sockfd, size_t length, bool * peerConnected,
	int flags )
{
	ssize_t bytes_recvd;
	T data;

	bytes_recvd = Socket::recv_into <T> ( sockfd ,
	                                      reinterpret_cast <void *> ( &data ) ,
	                                      length , flags );
	if ( bytes_recvd == 0 ) {

		if ( peerConnected != nullptr )
			( * peerConnected ) = true;
		else
			throw SocketPeerDisconnect(
				/* the peer of this */ sockfd /* has disconnected */
			);

	} else {

		if ( peerConnected != nullptr )
			( * peerConnected ) = false;

	}

	return ( data );
}

// template <typename T>
// inline T *		Socket::recv( size_t length,
// 	bool * peerConnected, int flags )
// {
// 	return (
// 		Socket::recv <T *> ( descriptor , length ,
// 			flags , peerConnected )
// 	);
// }

template <typename T>
inline T		Socket::recv( size_t length,
	bool * peerConnected, int flags )
{
	return (
		Socket::recv <T> ( descriptor , length ,
			flags , peerConnected )
	);
}

// template <typename T>
// inline T *		Socket::recv( Socket & sender, size_t length,
// 	bool * peerConnected, int flags )
// {
// 	return (
// 		Socket::recv <T *> ( sender.descriptor , length ,
// 			flags , peerConnected )
// 	);
// }

template <typename T>
inline T		Socket::recv( Socket & sender, size_t length,
	bool * peerConnected, int flags )
{
	return (
		Socket::recv <T> ( sender.descriptor , length ,
			flags , peerConnected )
	);
}

